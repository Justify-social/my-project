// Campaign Wizard Schema
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/campaign-wizard-client"
}

model CampaignWizard {
  id            String    @id @default(uuid())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  currentStep   Int       @default(1)
  isComplete    Boolean   @default(false)
  status        Status    @default(DRAFT)

  // Step 1: Campaign Details
  name             String    @db.VarChar(255)
  businessGoal     String    @db.Text
  startDate        DateTime
  endDate          DateTime
  timeZone         String
  primaryContact   Json
  secondaryContact Json?
  budget          Json
  platform        Platform
  influencerHandle String
  step1Complete   Boolean   @default(false)

  // Step 2: Objectives
  primaryKPI       KPI?
  secondaryKPIs    KPI[]
  messaging        Json?
  expectedOutcomes Json?
  features         Feature[]
  step2Complete    Boolean   @default(false)

  // Step 3: Audience
  demographics     Json?
  locations        Json[]
  targeting        Json?
  competitors      String[]
  step3Complete    Boolean   @default(false)

  // Step 4: Creative
  assets          Json[]
  guidelines      String?   @db.Text
  requirements    Json[]
  notes           String?   @db.Text
  step4Complete   Boolean   @default(false)

  history         WizardHistory[]

  @@index([status, createdAt])
}

model WizardHistory {
  id          String   @id @default(uuid())
  wizardId    String
  wizard      CampaignWizard @relation(fields: [wizardId], references: [id])
  step        Int
  action      String
  changes     Json
  performedBy String
  timestamp   DateTime @default(now())

  @@index([wizardId, timestamp])
}

// Enums
enum Status {
  DRAFT
  IN_REVIEW
  APPROVED
  ACTIVE
  COMPLETED
}

enum Platform {
  INSTAGRAM
  YOUTUBE
  TIKTOK
}

enum KPI {
  AD_RECALL
  BRAND_AWARENESS
  CONSIDERATION
  MESSAGE_ASSOCIATION
  BRAND_PREFERENCE
  PURCHASE_INTENT
  ACTION_INTENT
  RECOMMENDATION_INTENT
  ADVOCACY
}

enum Feature {
  CREATIVE_ASSET_TESTING
  BRAND_LIFT
  BRAND_HEALTH
  MIXED_MEDIA_MODELING
} 